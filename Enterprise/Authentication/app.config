                <value>Your password has been reset</value>
            </setting>
            <setting name="PasswordResetEmailBodyTemplate" serializeAs="String">
                <value>Dear @username,\nYour new temporary password is @password.</value>
            </setting>
            <setting name="PasswordResetEmailFromAddress" serializeAs="String">
                <value>noreply@example.com</value>
