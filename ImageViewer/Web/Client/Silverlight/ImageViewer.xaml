<UserControl x:Class="ClearCanvas.ImageViewer.Web.Client.Silverlight.ImageViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             
    xmlns:Views="clr-namespace:ClearCanvas.ImageViewer.Web.Client.Silverlight.Views"
             xmlns:local="clr-namespace:ClearCanvas.ImageViewer.Web.Client.Silverlight.Controls">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="LayoutRoot" Grid.Column="0" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="ToolbarContainer"  Grid.Row="0" Background="Black">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Views:ToolstripView x:Name="ToolstripViewComponent" Grid.Column="0"></Views:ToolstripView>               
            </Grid>
            <Grid x:Name="StudyViewContainer"  Grid.Row="1" Background="Black" >
            </Grid>
        </Grid>
        
    </Grid> 
</UserControl>
