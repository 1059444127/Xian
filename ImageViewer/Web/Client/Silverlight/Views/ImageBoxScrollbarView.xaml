<UserControl x:Class="ClearCanvas.ImageViewer.Web.Client.Silverlight.Views.ImageBoxScrollbarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400"
    xmlns:my="clr-namespace:ClearCanvas.Web.Client.Silverlight;assembly=ClearCanvas.Web.Client.Silverlight">

    <Grid x:Name="LayoutRoot" Margin="0,1,0,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ScrollBar Grid.Row="0" x:Name="ImageScrollBar" Orientation="Vertical" Width="17" 
               SmallChange="1" Style="{StaticResource ScrollBarStyle}"
               Scroll="ImageScrollBar_Scroll" LargeChange="5"   >

       
        </ScrollBar>
    </Grid>
</UserControl>
