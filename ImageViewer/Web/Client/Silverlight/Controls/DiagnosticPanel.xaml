<UserControl x:Class="ClearCanvas.ImageViewer.Web.Client.Silverlight.Controls.DiagnosticPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Controls1="clr-namespace:ClearCanvas.ImageViewer.Web.Client.Silverlight.Controls"
>
    <Grid x:Name="LayoutRoot" Background="SlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ClearLog" Grid.Row="0" HorizontalAlignment="Left" Content="Clear Log" Click="ClearLog_Click"  Width="100"/>
        <ScrollViewer  Grid.Row="1" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch">
            <TextBlock x:Name="Log" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </ScrollViewer>
    </Grid>
</UserControl>
