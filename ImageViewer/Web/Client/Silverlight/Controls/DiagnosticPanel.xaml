<UserControl x:Class="ClearCanvas.ImageViewer.Web.Client.Silverlight.Controls.DiagnosticPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Controls1="clr-namespace:ClearCanvas.ImageViewer.Web.Client.Silverlight.Controls"
>
    <Grid x:Name="LayoutRoot" Background="SlateGray"  Margin="5,5,5,5">
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <StackPanel>
                <Controls1:FPSCounter/>
                <StackPanel>
                    <Button x:Name="ClearLog"  HorizontalAlignment="Left" Content="Clear Log" Click="ClearLog_Click" Width="100"/>
                    <TextBlock x:Name="Log" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
